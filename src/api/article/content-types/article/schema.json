{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Articles and guides for parents"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "maxLength": 160
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "playgroups_classes",
        "local_guides",
        "parent_resources",
        "parties_celebrations",
        "places_to_eat",
        "advertise_with_us",
        "about_us"
      ],
      "required": true
    },
    "author_name": {
      "type": "string"
    },
    "author_email": {
      "type": "email"
    },
    "network": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::network.network",
      "inversedBy": "articles"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "blocks": {
      "type": "dynamiczone",
      "components": ["shared.media", "shared.quote", "shared.rich-text", "shared.slider"]
    }
  }
}
