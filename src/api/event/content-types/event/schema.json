{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Children's events and activities"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "date_time": {
      "type": "datetime",
      "required": true
    },
    "end_time": {
      "type": "datetime"
    },
    "location_name": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "text"
    },
    "latitude": {
      "type": "decimal"
    },
    "longitude": {
      "type": "decimal"
    },
    "organizer": {
      "type": "string",
      "required": true
    },
    "organizer_email": {
      "type": "email"
    },
    "organizer_phone": {
      "type": "string"
    },
    "price": {
      "type": "decimal",
      "default": 0
    },
    "is_free": {
      "type": "boolean",
      "default": false
    },
    "age_min": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "max": 18
    },
    "age_max": {
      "type": "integer",
      "default": 12,
      "min": 0,
      "max": 18
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "sports",
        "arts_crafts",
        "music",
        "dance",
        "educational",
        "playgroup",
        "party",
        "outdoor",
        "workshop",
        "holiday_camp",
        "other"
      ],
      "required": true
    },
    "booking_url": {
      "type": "string"
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "networks": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::network.network",
      "inversedBy": "events"
    }
  }
}